<Window x:Class="Flats.AgentWin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Flats"
        mc:Ignorable="d"
        Title="AgentWin" Height="450" Width="946">
    <Grid>
        <TextBlock HorizontalAlignment="Left" Margin="95,20,0,0" TextWrapping="Wrap" Text="Имя:" VerticalAlignment="Top" x:Name="name"/>
        <TextBlock HorizontalAlignment="Center" Margin="0,147,0,0" TextWrapping="Wrap" Text="Кваритиры для оценки" VerticalAlignment="Top" FontSize="16"/>
        <DataGrid  ItemsSource="{Binding}" Margin="18,168,18,90" x:Name="apt"/>
        <Button Content="Закрыть" HorizontalAlignment="Center" Margin="0,365,0,0" VerticalAlignment="Top" x:Name="Exit" Click="Exit_Click"/>
        <Button Content="Завершить оценивание" HorizontalAlignment="Left" Margin="41,63,0,0" VerticalAlignment="Top" Name="changeCost" Click="ChangeCost_Click"/>
        <TextBox HorizontalAlignment="Left" Margin="41,100,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" Visibility="Collapsed"  Name="cost"/>
        <Button Content="Подтвердить" HorizontalAlignment="Left" Margin="41,123,0,0" VerticalAlignment="Top" Visibility="Collapsed" Name="accept" Click="Accept_click"/>
    </Grid>
</Window>
