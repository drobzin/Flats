<Window x:Class="Flats.WinChangePhone"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        xmlns:local="clr-namespace:Flats"
        mc:Ignorable="d"
        Title="WinChangePhone" Height="450" Width="800">
    <Grid>
        <ListBox ItemsSource="{Binding}" Margin="266,96,266,96" Name="phonesList"/>
        <Button Content="Удалить" HorizontalAlignment="Left" Margin="190,96,0,0" VerticalAlignment="Top" Name="Delete" Click="Delete_Click"/>
        <Button Content="Добавить" HorizontalAlignment="Left" Margin="186,139,0,0" VerticalAlignment="Top" Name="Add" Click="Add_Click"/>
        <xctk:MaskedTextBox Margin="136,174,539,217"  ClipboardMaskFormat="IncludePromptAndLiterals" Mask="0-000-000-00-00"  Name="phone_box" Visibility="Collapsed"/>
        <Button Content="Сохранить" HorizontalAlignment="Left" Margin="183,10,0,0" VerticalAlignment="Center" Name="save" Click="Save_Click" Visibility="Collapsed"/>

    </Grid>
</Window>
