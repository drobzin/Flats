<Window x:Class="Flats.WinAddNewDistrict"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Flats"
        mc:Ignorable="d"
        Title="WinAddNewDistrict" Height="200" Width="200">
    <Grid>
        <WrapPanel Name="wrapPanel" ItemWidth="250"  Orientation="Vertical"  HorizontalAlignment="Left" VerticalAlignment="Top" Width="400"  Height="352" Margin="10,10,0,0">
            <Label HorizontalAlignment="Left"   Content="District" VerticalAlignment="Top" Name="district" Target="{Binding ElementName=district_box}"/>
            <TextBox HorizontalAlignment="Left"  TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" Name="district_box" />
        </WrapPanel>
        <Button Content="Добавить" HorizontalAlignment="Left" Margin="20,80,0,0" VerticalAlignment="Top" Name ="Add" Click="Add_Click"/>
    </Grid>
</Window>
